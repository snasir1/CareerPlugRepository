<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mycareerplug.iamokah.mycareerplug">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignupActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginUIActivity" />
        </activity>
        <activity android:name=".LoginActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginUIActivity" />
        </activity>
        <activity android:name=".phonecreate"
            android:screenOrientation="portrait" />
        <activity android:name=".LoginUIActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".phoneAuthActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SignupActivity" />
        </activity>
        <activity android:name=".CreateProfile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FragmentDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name=".Main2Activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoactionbar" />
        <activity android:name=".listview_activity"
            android:screenOrientation="portrait" />
        <activity android:name=".CreateUserProfile"
            android:screenOrientation="portrait" />
        <activity android:name=".HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoactionbar"></activity>
    </application>

</manifest>